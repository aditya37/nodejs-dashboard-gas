<script>  
  $(document).ready(function() {
    $.ajax({
      url: 'dashboard-data',
      type: 'get',
      dataType: 'json',
      success:function(data){
        var len = 0
        if (data.result != null) {
          len = data.result.length
        }
        if (len > 0) {
          for(var i=0; i < len; i++){
            $("#tanggal_co_dua").html(data.result[i].tanggal)
            $("#tanggal_so_dua").html(data.result[i].tanggal)
            $("#tanggal_co").html(data.result[i].tanggal)
            $("#tanggal_jarak_pandang").html(data.result[i].tanggal)
            $("#tanggal_status").html(data.result[i].tanggal)
            $("#kadar_co_dua").html(Math.round(data.result[i].ppm_co2*100)/100);
            $("#kadar_co").html(Math.round(data.result[i].ppm_co *100)/100);
            $("#jarak_pandang").html(Math.round(data.result[i].jarak_pandang*100)/100);
            $("#kadar_so_dua").html(Math.round(data.result[i].ppm_so2 * 100) / 100);

            if (data.result[i].ppm_co < 50 && data.result[i].ppm_so2 < 15 && data.result[i].ppm_co2 < 1000){
            $("#color").addClass("small-box bg-green") 
            $("#status").html("Aman")
            }else if (data.result[i].ppm_co >= 50 && data.result[i].ppm_co < 250 && data.result[i].ppm_so2 < 15 && data.result[i].ppm_co2 < 1000){
              $("#color").removeClass("small-box bg-green").addClass("small-box bg-yellow") 
              $("#status").html("Waspada")
            }else if (data.result[i].ppm_co < 50 && data.result[i].ppm_so2 >= 15 && data.result[i].ppm_so2 < 50 && data.result[i].ppm_co2 < 1000  ){
              $("#color").removeClass("small-box bg-green").addClass("small-box bg-yellow") 
              $("#status").html("Waspada")
            }else if(data.result[i].ppm_co < 50 && data.result[i].ppm_so2 <15 && data.result[i].ppm_co2 >= 1000 && data.result[i].ppm_co2 < 2000  ){
              $("#color").removeClass("small-box bg-green").addClass("small-box bg-yellow") 
              $("#status").html("Waspada")
            }else if(data.result[i].ppm_co >= 50 && data.result[i].ppm_co < 250 && data.result[i].ppm_so2 >= 15 && data.result[i].ppm_so2 < 50 && data.result[i].ppm_co2 < 1000){
              $("#color").removeClass("small-box bg-yellow").addClass("small-box bg-yellow") 
              $("#status").html("Waspada")
            }else if (data.result[i].ppm_co >= 50 && data.result[i].ppm_co < 250 && data.result[i].ppm_so2 < 15 && data.result[i].ppm_co2 >= 1000 && data.result[i].ppm_co2 < 2000){
              $("#color").removeClass("small-box bg-yellow").addClass("small-box bg-yellow") 
              $("#status").html("Waspada")
            }else if (data.result[i].ppm_co < 50 && data.result[i].ppm_so2 >= 15 && data.result[i].ppm_so2 < 50 && data.result[i].ppm_co2 >= 1000 && data.result[i].ppm_co2 < 2000){
              $("#color").removeClass("small-box bg-yellow").addClass("small-box bg-yellow") 
              $("#status").html("Waspada")
            }else if(data.result[i].ppm_co >= 50 && data.result[i].ppm_co < 250 && data.result[i].ppm_so2 >= 15 && data.result[i].ppm_so2 < 50 && data.result[i].ppm_co2 >= 1000 && data.result[i].ppm_co2 < 2000){
              $("#color").removeClass("small-box bg-yellow").addClass("small-box bg-yellow") 
              $("#status").html("Waspada")
            }else{
              $("#color").removeClass("small-box bg-yellow").addClass("small-box bg-red") 
              $("#color").removeClass("small-box bg-green").addClass("small-box bg-red") 
              $("#status").html("Bahaya")
            }
          }
        }
      }
    })
  })
</script>
